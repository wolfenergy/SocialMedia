pragma solidity ^0.8.0;

contract SocialMedia {
    struct Post {
        address author;
        string contentHash; // IPFS hash for post content
        uint timestamp;
        uint likes;
    }

    mapping(uint => Post) public posts;
    uint public postCount;

    function createPost(string memory _contentHash) public {
        postCount++;
        posts[postCount] = Post(msg.sender, _contentHash, block.timestamp, 0);
    }

    function likePost(uint _postId) public {
        require(_postId <= postCount, "Post does not exist");
        posts[_postId].likes++;
    }
}
